@model HelpSearchHits

@{
    Layout = "_LayoutSupport";

}
<h4><i class="fa-regular fa-circle-question"></i> StreetPerfect Help Search Results</h4>

<div class="row">
    <div class="col help-content">
        @foreach(var hit in Model.Hits)
        {
            <p class="mt-5">
                <b><a href="/Help/topic/@hit.TopicKey">@hit.Name</a></b><br />
                @hit.Desc</p>
            <p>
            @foreach(var frag in hit.Frags){
                @Html.Raw(frag)<br/>
            }
            </p>
        }
    </div>
</div>

@section Scripts {

}
